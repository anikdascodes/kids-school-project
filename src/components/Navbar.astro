---
const navItems = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '/about' },
  { name: 'Programs', href: '/programs' },
  { name: 'Blog', href: '/blog' },
  { name: 'Contact', href: '/contact' },
];
---

<nav class="bg-white shadow-lg sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex justify-between items-center h-16 md:h-20">
      <a href="/" class="flex items-center space-x-2 md:space-x-3">
        <img src="/logo.svg" alt="School Logo" class="h-10 w-10 md:h-12 md:w-12 animate-float" />
        <span class="font-bubblegum text-xl md:text-2xl text-primary">Little Learners</span>
      </a>
      
      <div class="hidden md:flex space-x-6 lg:space-x-8">
        {navItems.map(item => (
          <a
            href={item.href}
            class="font-fredoka text-base lg:text-lg text-gray-600 hover:text-primary transition-colors duration-200"
          >
            {item.name}
          </a>
        ))}
      </div>

      <button class="md:hidden text-gray-600 hover:text-primary">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu (hidden by default) -->
  <div class="md:hidden hidden">
    <div class="px-2 pt-2 pb-3 space-y-1">
      {navItems.map(item => (
        <a
          href={item.href}
          class="block px-3 py-2 text-base font-fredoka text-gray-600 hover:text-primary transition-colors duration-200"
        >
          {item.name}
        </a>
      ))}
    </div>
  </div>
</nav>