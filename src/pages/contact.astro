---
import Layout from '../layouts/Layout.astro';

const contactInfo = {
  address: '123 Learning Lane, Kidsville, KS 12345',
  phone: '(555) 123-4567',
  email: 'hello@littlelearners.edu',
  hours: 'Monday - Friday: 7:00 AM - 6:00 PM',
  coordinates: {
    lat: 40.7128,
    lon: -74.0060
  }
};
---

<Layout title="Contact Us">
  <div class="max-w-7xl mx-auto px-4 py-12">
    <h1 class="font-bubblegum text-4xl md:text-5xl text-primary text-center mb-16">Contact Us</h1>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <div class="space-y-8">
        <div class="bg-white p-6 md:p-8 rounded-lg shadow-md">
          <h2 class="font-bubblegum text-2xl md:text-3xl text-primary mb-6">Get in Touch</h2>
          <div class="space-y-4">
            <div class="flex items-start space-x-4">
              <span class="text-2xl flex-shrink-0">ğŸ“</span>
              <p class="text-gray-600 break-words">{contactInfo.address}</p>
            </div>
            <div class="flex items-start space-x-4">
              <span class="text-2xl flex-shrink-0">ğŸ“</span>
              <p class="text-gray-600">{contactInfo.phone}</p>
            </div>
            <div class="flex items-start space-x-4">
              <span class="text-2xl flex-shrink-0">âœ‰ï¸</span>
              <p class="text-gray-600 break-words">{contactInfo.email}</p>
            </div>
            <div class="flex items-start space-x-4">
              <span class="text-2xl flex-shrink-0">ğŸ•’</span>
              <p class="text-gray-600">{contactInfo.hours}</p>
            </div>
          </div>
        </div>

        <div class="bg-white p-6 md:p-8 rounded-lg shadow-md">
          <h2 class="font-bubblegum text-2xl md:text-3xl text-primary mb-6">Send us a Message</h2>
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-gray-700 mb-2">Name</label>
              <input
                type="text"
                id="name"
                class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                required
              />
            </div>
            <div>
              <label for="email" class="block text-gray-700 mb-2">Email</label>
              <input
                type="email"
                id="email"
                class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                required
              />
            </div>
            <div>
              <label for="message" class="block text-gray-700 mb-2">Message</label>
              <textarea
                id="message"
                rows="4"
                class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                required
              ></textarea>
            </div>
            <button
              type="submit"
              class="w-full bg-primary text-white font-bold py-3 px-6 rounded-lg hover:bg-opacity-90 transition-colors duration-200"
            >
              Send Message
            </button>
          </form>
        </div>
      </div>

      <div class="bg-white p-4 rounded-lg shadow-md">
        <div class="w-full h-[600px] rounded-lg overflow-hidden">
          <iframe
            width="100%"
            height="100%"
            frameborder="0"
            scrolling="no"
            marginheight="0"
            marginwidth="0"
            src={`https://www.openstreetmap.org/export/embed.html?bbox=${contactInfo.coordinates.lon-0.01}%2C${contactInfo.coordinates.lat-0.01}%2C${contactInfo.coordinates.lon+0.01}%2C${contactInfo.coordinates.lat+0.01}&layer=mapnik&marker=${contactInfo.coordinates.lat}%2C${contactInfo.coordinates.lon}`}
            style="border: none;"
            class="rounded-lg"
          ></iframe>
          <a 
            href={`https://www.openstreetmap.org/?mlat=${contactInfo.coordinates.lat}&mlon=${contactInfo.coordinates.lon}#map=15/${contactInfo.coordinates.lat}/${contactInfo.coordinates.lon}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-primary hover:text-secondary text-sm mt-2 inline-block"
          >
            View Larger Map
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  iframe {
    min-height: 400px;
  }
  @media (min-width: 1024px) {
    iframe {
      height: 100%;
    }
  }
</style>